# --- Database ---
# PostgreSQL connection string (required for Vercel/Production)
DATABASE_URL="postgresql://user:pass@host:5432/dbname?sslmode=require"

# --- AWS Cognito (Auth) ---
AWS_REGION="us-east-1"
COGNITO_USER_POOL_ID="us-east-1_xxxxxxxxx"
COGNITO_CLIENT_ID="xxxxxxxxxxxxxxxxxxxxxxxxxx"

# --- Frontend ---
VUE_APP_API_URL="/api/v1"
VUE_APP_GOOGLE_MAPS_API_KEY="your_google_maps_key"

# --- Stripe ---
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
# Webhook signing secret — different per environment:
#   Dev:  run `npm run stripe:listen` and paste the printed whsec_... here (webhooks hit localhost)
#   Live: Stripe Dashboard → Webhooks → add endpoint https://your-app.vercel.app/api/v1/stripe/webhook → use that signing secret in Vercel env
STRIPE_WEBHOOK_SECRET="whsec_..."
APP_URL="https://your-domain.com"
